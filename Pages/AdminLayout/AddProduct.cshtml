@page
@model WebApplication1.Pages.AddProductModel
@{
    ViewData["Title"] = "Add New Product";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Add New Product</h2>

    <div class="card">
        <div class="card-body">
            <form method="post" enctype="multipart/form-data">
                <div class="mb-3">
                    <label asp-for="NewProduct.Name" class="form-label">Product Name</label>
                    <input asp-for="NewProduct.Name" class="form-control" required />
                    <span asp-validation-for="NewProduct.Name" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="NewProduct.Price" class="form-label">Price</label>
                    <input asp-for="NewProduct.Price" class="form-control" required />
                    <span asp-validation-for="NewProduct.Price" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="NewProduct.Quantity" class="form-label">Quantity</label>
                    <input asp-for="NewProduct.Quantity" class="form-control" required />
                    <span asp-validation-for="NewProduct.Quantity" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="NewProduct.Description" class="form-label">Description</label>
                    <textarea asp-for="NewProduct.Description" class="form-control" rows="4" required></textarea>
                    <span asp-validation-for="NewProduct.Description" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="NewProduct.ImageFile" class="form-label">Product Image</label>
                    <input asp-for="NewProduct.ImageFile" type="file" class="form-control" accept="image/*" required />
                    <span asp-validation-for="NewProduct.ImageFile" class="text-danger"></span>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-primary">Add Product</button>
                    <a asp-page="AdminDashboard" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
}
